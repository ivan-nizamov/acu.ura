---
interface Props {
  schedule: Array<{
    day: string;
    hours: string[];
  }>;
}

const { schedule } = Astro.props;
---

<dl class="flex flex-col border border-muted rounded-xl overflow-hidden">
  <div class="bg-muted p-s">
    <dt class="font-bold text-xl">Program de Lucru</dt>
  </div>
  <div class="p-m flex flex-col gap-xs">
    {schedule.map(({ day, hours }) => (
      <div class="grid grid-cols-[minmax(5rem,auto)_1fr] gap-s">
        <dt class="font-bold">{day}:</dt>
        <dd>
          {hours.map((time, index) => (
            <>
              {time}
              {index < hours.length - 1 && (
                <span class="mx-xs text-muted">È™i</span>
              )}
            </>
          ))}
        </dd>
      </div>
    ))}
  </div>
</dl>