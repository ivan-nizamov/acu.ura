---
interface Props {
  schedule: Array<{
    day: string;
    hours: string[];
  }>;
}

const { schedule } = Astro.props;
---

<dl class="border-muted flex flex-col overflow-hidden rounded-xl border">
  <div class="bg-muted p-s">
    <dt class="text-xl font-bold">Program de Lucru</dt>
  </div>
  <div class="p-m gap-xs flex flex-col">
    {
      schedule.map(({ day, hours }) => (
        <div class="gap-s grid grid-cols-[minmax(5rem,auto)_1fr]">
          <dt class="font-bold">{day}:</dt>
          <dd>
            {hours.map((time, index) => (
              <>
                {time}
                {index < hours.length - 1 && <span class="mx-xs text-muted">È™i</span>}
              </>
            ))}
          </dd>
        </div>
      ))
    }
  </div>
</dl>
