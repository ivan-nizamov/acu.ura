---
// Header.astro
import { Dropdown, DropdownTrigger, DropdownContent, DropdownItem } from "@/components/starwind/dropdown";
---

<header class="border-b">
  <div class="mx-auto px-s py-s flex items-center">
    <!-- Logo / title -->
    <div class="font-bold italic text-2xl justify-start">
      <a href="/">Pavlisan.</a>
    </div>

    <!-- Right side: desktop nav OR mobile menu -->
    <div class="ml-auto flex items-center justify-end">
      <!-- Desktop nav (md and up) -->
      <nav class="hidden md:flex gap-l items-center">
        <a href="/despre" class="text-sm hover:underline">Despre</a>
        <a href="/servicii" class="text-sm hover:underline">Servicii</a>
        <a href="/contact" class="text-sm hover:underline">Contact</a>
      </nav>

      <!-- Mobile dropdown (below md) -->
      <Dropdown class="md:hidden justify-end">
        <DropdownTrigger asChild>
          <button
            aria-label="Open menu"
            class="h-m w-m flex items-center justify-center"
          >
            <div class="grid justify-items-center gap-3xs">
              <span class="block h-0.75 w-m rounded-full bg-black"></span>
              <span class="block h-0.75 w-m rounded-full bg-black"></span>
              <span class="block h-0.75 w-m rounded-full bg-black"></span>
            </div>
          </button>
        </DropdownTrigger>

        <DropdownContent align="end">
          <DropdownItem as="a" href="/despre">Despre</DropdownItem>
          <DropdownItem as="a" href="/servicii">Servicii</DropdownItem>
          <DropdownItem as="a" href="/contact">Contact</DropdownItem>
        </DropdownContent>
      </Dropdown>
    </div>
  </div>
</header>
